@EndUserText.label: 'Salesorder'
@MappingRole: true
define role ZH_DDL_SALESORDER {
    grant
        select
            on
                ZA1_I_SALESORDER
                    where
                        ( ( erdat ) = aspect pfcg_auth( ZZ_ERDAT, ZZ_ERDAT, ACTVT = '03' ) 
                        and erdat = '20220204' ) or erdat <> '20220204';
                        
}